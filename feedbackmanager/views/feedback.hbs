<h1>Anonymous Speech Feedback System</h1>
<h3>To Send Your Anonymous Feedback</h3>
<h3>input your feedback below</h3>
<div>
  <div class="form-group">
    <label for="comment">Feedback:</label>
    <textarea class="form-control" rows="5" id="comment" onKeyUp="state.feedback = this.value"></textarea>
  </div>
  <div class="form-group">
    <button type="button" class="btn btn-primary" onClick="sendFeedback()">Send Feedback</button>
  </div>
</div>
<div id="successDiv" style="color: green;"></div>
<div id="failDiv" style="color: red;"></div>
<div style="display: none;" id="tokenDiv">{{token}}</div>
<script>
  const url = 'https://ti-manager.com';
  var state = {};
  function getToken() {
    return document.getElementById('tokenDiv').innerHTML.toString();
  }
  async function req(params) {
    const response = await fetch(url + params.endpoint, {
      method: 'POST',
      mode: 'cors',
      cache: 'no-cache',
      credentials: 'same-origin',
      headers: { 'Content-Type': 'application/json' },
      redirect: 'follow',
      referrerPolicy: 'no-referrer',
      body: JSON.stringify(params.data)
    });
    return response.json();
  }
  async function sendFeedback() {
    const res = await req({
      data: {
        feedback: this.state.feedback,
        token: getToken()
      },
      endpoint: '/sendFeedback'
    });
    console.log(res);
    if (res.isSent) {
      document.getElementById('successDiv').innerHTML = 'Your feedback was successfully sent';
    } else {
      document.getElementById('failDiv').innerHTML = 'Oops. Something went wrong. Refresh the page and try again.';
    }
  }
</script>
