<div class="inputPhoneHeader">To send your anonymous feedback input your feedback below:</div>
<div>
  <div class="form-group">
    <label for="comment">Feedback:</label>
    <textarea class="form-control" rows="5" id="comment" onKeyUp="state.feedback = this.value" autofocus></textarea>
  </div>
  <div class="form-group text-right">
    <button type="button" class="btn btn-primary" onClick="sendFeedback()" id="feedbackButton">Send Feedback</button>
    <button class="btn btn-primary" disabled style="display: none;" id="loaderButton">
      <span class="spinner-border spinner-border-sm"></span>
      Loading..
    </button> 
  </div>
</div>
<div id="successDiv" style="color: green;"></div>
<div id="failDiv" style="color: red;"></div>
<div style="display: none;" id="tokenDiv">{{token}}</div>
<script src='/hbsJs/feedback.js'></script>
